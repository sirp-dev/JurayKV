@page
@model JurayKV.UI.Areas.KvMain.Pages.IBuckets.AddModel
@{
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">NEW BUCKET</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="BucketName" class="control-label"></label>
                        <input asp-for="BucketName" class="form-control" id="upper" onkeyup="myUppercase()" />
                        <span asp-validation-for="BucketName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
