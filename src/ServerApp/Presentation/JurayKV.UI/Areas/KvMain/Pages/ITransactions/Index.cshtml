@page
@model JurayKV.UI.Areas.KvMain.Pages.ITransactions.IndexModel
@{
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">KV TransactionS</h3>


        <a asp-page="./TransactionAnalysis" target="_blank" class="btn bg-gradient-warning btn-sm" style="float:right;">Transaction Analysis</a>

    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="table-responsive">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>S/N</th>
                        <th>
                            Date
                        </th>
                        <th>
                            Fullname
                        </th>
                        <th>Note</th>
                        <th>Amount </th>
                        <th>Referrence </th>
                        <th>Wallet Balance </th>
                        <th>Type </th>
                        <th>Status </th>

                        <th> </th>

                    </tr>
                </thead>
                @{
                    int sn = 0;
                }
                <tbody>
                    @foreach (var item in Model.Transactions)
                    {
                        <tr>
                            <td>
                                @{
                                    sn++;
                                }
                                @sn
                            </td>
                            <td>
                                @item.CreatedAtUtc.ToString("dd/MM/yyyy")
                            </td>
                            <td>
                                <a asp-page="/IUsers/Info" asp-route-id="@item.UserId">
                                    @Html.DisplayFor(modelItem => item.Fullname)
                                </a>
                            </td>
                            <td>
                                <a asp-page="./Info" asp-route-id="@item.Id">
                                    @Html.DisplayFor(modelItem => item.UniqueReference)
                                    </a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TransactionReference)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.WalletBalance)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TransactionType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>

                            <td>
                                <div class="btn-group">

                                    <div class="btn-group">
                                        <button type="button" class="btn btn-success btn-xs dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                                            Action
                                        </button>
                                        <div class="dropdown-menu" style="">

                                            <a class="dropdown-item" asp-page="./Info" asp-route-id="@item.Id">Details</a>
                                            <a class="dropdown-item" asp-page="./Update" asp-route-id="@item.Id">Update</a>

                                        </div>
                                    </div>
                                </div>

                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
