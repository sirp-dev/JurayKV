@page
@model JurayKV.UI.Areas.KvMain.Pages.PaymentCategory.VariationData.RemoveModel
@{
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">UPDATE VARIATION</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Variation.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Variation.Name)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Variation.Code)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Variation.Code)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Variation.Amount)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Variation.Amount)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Variation.Active)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Variation.Active)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Variation.CategoryVariation)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Variation.CategoryVariation.Name)
                    </dd>
                </dl>


                <div class="form-group">
                    <form method="post">
                        <input type="hidden" asp-for="Variation.Id" />
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>
                    </form>
                </div>

            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
