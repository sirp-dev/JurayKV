@page
@model JurayKV.UI.Areas.KvMain.Pages.IWallet.InfoModel
@{
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">KV WALLET DETAILS</h3>
    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">

                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UpdateWallet.Fullname)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UpdateWallet.Fullname)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UpdateWallet.Amount)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UpdateWallet.Amount)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UpdateWallet.Note)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UpdateWallet.Note)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UpdateWallet.CreatedAtUtc)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UpdateWallet.CreatedAtUtc)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UpdateWallet.LastUpdateAtUtc)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UpdateWallet.LastUpdateAtUtc)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UpdateWallet.Log)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.Raw(Model.UpdateWallet.Log)
                    </dd>
                </dl>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
        <a class="btn btn-warning" asp-page="./Update" asp-route-id="@Model.UpdateWallet.Id">Update</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
