@page
@model JurayKV.UI.Areas.KvMain.Pages.IAdvertRequests.InfoModel
@{
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">AdvertRequest DETAILS</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">

                <dl class="row">

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UpdateAdvertRequest.Company.Name)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UpdateAdvertRequest.Company.Name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UpdateAdvertRequest.Note)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UpdateAdvertRequest.Note)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UpdateAdvertRequest.Amount)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UpdateAdvertRequest.Amount)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UpdateAdvertRequest.CreatedAtUtc)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UpdateAdvertRequest.CreatedAtUtc)
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UpdateAdvertRequest.ImageUrl)
                    </dt>
                    <dd class="col-sm-10">
                        <img src="@Model.UpdateAdvertRequest.ImageUrl" style="max-height:400px" />
                    </dd>

                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UpdateAdvertRequest.Status)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UpdateAdvertRequest.Status)
                    </dd>



                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UpdateAdvertRequest.TransactionReference)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UpdateAdvertRequest.TransactionReference)
                    </dd>

                </dl>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
        <a class="btn btn-warning" asp-page="./Update" asp-route-id="@Model.UpdateAdvertRequest.Id">Update</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
